// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Response {
  id                   String   @id @default(uuid())
  createdAt            DateTime @default(now())
  sex                  String
  ageBand              String
  answersJson          String   // We'll store it as a JSON string since SQLite doesn't have a native JSON type
  scoreYesNo          Float
  scoreAccountability Float
  lean                 String
  strength             String
}
